{
  "name": "claude-ecosystem-standard",
  "version": "2.7.0",
  "description": "Portable Claude Ecosystem Standard v2.7.0 - Works as drop-in subdirectory in any project with complete path portability, dynamic configuration, and cross-platform compatibility",
  "main": ".dist/index.js",
  "private": false,
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx .src/index.ts",
    "start": "node .dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint '.src/**/*.ts'",
    "lint:fix": "eslint '.src/**/*.ts' --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "claude-code",
    "enterprise-typescript",
    "dynamic-configuration",
    "structured-logging",
    "auto-recovery",
    "session-management",
    "mcp-servers",
    "ai-analytics",
    "performance-monitoring",
    "uuid-identifiers",
    "winston-logging",
    "enterprise-template",
    "claude-ecosystem",
    "production-ready",
    "development-template",
    "typescript-enterprise"
  ],
  "author": {
    "name": "Claude Ecosystem Standard Team",
    "email": "ces@anthropic.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "ces": {
    "templateVersion": "2.7.0",
    "mcpServers": 14,
    "agents": 12,
    "enterpriseFeatures": true,
    "enterpriseEdition": true,
    "dynamicConfiguration": true,
    "structuredLogging": true,
    "autoRecovery": true,
    "aiAnalytics": true,
    "sessionManagement": true,
    "sessionProfiles": true,
    "performanceMonitoring": true,
    "uuidIdentifiers": true,
    "typescript": true,
    "cliInterface": true,
    "testCoverage": 90,
    "validationScore": 100,
    "productionReady": true
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@types/chokidar": "^1.7.5",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "commander": "^11.1.0",
    "dotenv": "^17.2.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "lodash": "^4.17.21",
    "nanospinner": "^1.2.2",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
